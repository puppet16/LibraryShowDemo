<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/styleable_b1"
                style="@style/DemoButton"
                android:text="Colored background" />

            <Button
                android:id="@+id/styleable_b2"
                style="@style/DemoButton"
                android:text="Colored text" />


            <Button
                android:id="@+id/styleable_b3"
                style="@style/DemoButton"
                android:text="Colored bold text" />

            <Button
                android:id="@+id/styleable_b4"
                style="@style/DemoButton"
                android:text="Custom font" />

            <Button
                android:id="@+id/styleable_b5"
                style="@style/DemoButton"
                android:text="Corner radius: 5dp" />

            <Button
                android:id="@+id/styleable_b6"
                style="@style/DemoButton"
                android:text="Icon start" />

            <Button
                android:id="@+id/styleable_b7"
                style="@style/DemoButton"
                android:text="Icon end" />

            <Button
                android:id="@+id/styleable_b8"
                style="@style/DemoButton"
                android:text="Icon start + end " />

            <Button
                android:id="@+id/styleable_b9"
                style="@style/DemoButton"
                android:text="Colored stroke" />

            <Button
                android:id="@+id/styleable_b10"
                style="@style/DemoButton"
                android:text="All styles" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>